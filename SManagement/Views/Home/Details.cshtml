@model HomeDetailsViewModel


@{ 
    ViewBag.Title = "Staf Details";
    var photoFilePath = "~/images/" + (Model.Staf.PhotoFillPath ?? "user.png");
}
<div class="card-deck">
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.Staf.FirstName @Model.Staf.LastName</h1>
                </div>


                <div class="card-body text-center">
                    <img class="card-img-top" src="@photoFilePath" asp-append-version="true" />

                    <h4>Staf Id: @Model.Staf.Id</h4>
                    <h4>Email: @Model.Staf.Email</h4>
                    <h4>Department: @Model.Staf.Department</h4>

                </div>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="Index" class="btn btn-primary m-1">Back</a>
                    <a asp-controller="home" asp-action="Edit" asp-route-Id="@Model.Staf.Id" class="btn btn-primary m-1">Edit</a>
                    <form asp-controller="home" asp-action="Delete" asp-route-Id="@Model.Staf.Id" method="post">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>