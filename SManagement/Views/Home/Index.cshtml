@model HomeIndexViewModel

@{
    ViewBag.Title = "Staf List";
}


<div class="card-deck">
    @foreach (var staf in Model.Stafs)
    {
        var photoFilePath = "~/images/" + (staf.PhotoFillPath ?? "user.png");
        <div class="card m-3"style="min-width:18rem; max-width:30.5%;">
            <div class="card-header">
                <h3 class="card-footer text-center">@staf.FirstName @staf.LastName</h3>
            </div>
            <img class="card-img-top" src="@photoFilePath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-Id="@staf.Id" class="btn btn-primary m-1">View</a>
                <a asp-controller="home" asp-action="Edit" asp-route-Id="@staf.Id" class="btn btn-primary m-1">Edit</a>
                <form asp-controller="home" asp-action="delete" asp-route-Id="@staf.Id" method="post">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                </form>
            </div>

        </div>

    }
</div>